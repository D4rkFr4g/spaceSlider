<SliderGame>:
    Image:
        id: bg_image
        source: 'images/bg.jpg'
        pos: self.parent.pos
        size: self.parent.size

    Image:
        source: 'images/blackbox.png'
        pos: 350, 500
        size: self.size

        Label:
            id: title
            text: 'Space Slide'
            size_hint: None, None
            pos: self.parent.pos[0], self.parent.pos[1]
            color: 1, 1, 1, 1

    Image:
        id: puzzle_bg
        source: 'images/puzzlebg.png'
        pos: 200, 100
        size: 400, 400

    Button:
        id: reset_button
        text: 'Reshuffle'
        size: 100, 40
        pos: 200, 30
        on_press: root.shuffle_tiles()

    Button:
        id: end_button
        text: 'Instant Win'
        size: 100, 40
        pos: 500, 30
        on_press: exit()

