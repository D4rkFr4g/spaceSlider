<SlideTile>:
    #pos_hint: {'x':0.5, 'y':0.5}
    #size: self.parent.height * 0.2, self.parent.height * 0.2
    #size: 1.0 / 20, 1.0 / 20
    #pos: self.pos

    Image:
        id: my_image
        source: self.source #'images/puzzle.png'
        pos: self.parent.pos
        size: self.parent.size

